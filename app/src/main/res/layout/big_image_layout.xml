<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/big_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_10">

    <View
        android:id="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        android:id="@+id/big_title"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"/>
    <ImageView
        android:id="@+id/big_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/big_title"/>
    <TextView
        android:id="@+id/big_first_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_post_browser"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="人浏览"
        android:textColor="@color/font_color_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/big_image" />

    <TextView
        android:id="@+id/big_second_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_comment_gray"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="人跟踪"
        android:textColor="@color/font_color_light"
        app:layout_constraintLeft_toRightOf="@+id/big_first_num"
        app:layout_constraintTop_toBottomOf="@+id/big_image" />
</androidx.constraintlayout.widget.ConstraintLayout>