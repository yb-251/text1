<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragment.DataFragment">
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        app:tl_bar_color="@color/light_back"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/white"
        app:tl_indicator_corner_radius="@dimen/dp_11"
        app:tl_indicator_margin_bottom="@dimen/dp_1"
        app:tl_indicator_margin_left="@dimen/dp_1"
        app:tl_indicator_margin_right="@dimen/dp_1"
        app:tl_indicator_margin_top="@dimen/dp_1"
        app:tl_tab_padding="@dimen/dp_8"
        app:tl_bar_stroke_color="@color/line_color"
        app:tl_textSelectColor="@color/font_color_dark"
        app:tl_textUnselectColor="@color/font_color_light"
        app:tl_textsize="@dimen/sp_11" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout" />

</LinearLayout>